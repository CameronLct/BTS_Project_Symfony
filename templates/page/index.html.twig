{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

{{ include('navbar/navbar.html.twig')}}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue {{ user_name }} sur le site d'enchères de produits</h1>
</div>
<div class="container-fluid">
    <table>
        <h2>historique des encheres</h2>
        <thead>

{#        <h2>enchere numero {{ encheres.idEnchere }}</h2>#}
    <tr>
{#        <td>Enchère</td>#}
        <td>produits</td>
        <td>prix</td>

    </tr>
    </thead>
    <tbody>
    {% for encheres in encheres %}

              {% if  encheres.fournisseur == user_name %}
        <tr>
{#            <td>{{ encheres.idEnchere }}</td>#}
            <td>{{ encheres.produit }}</td>
            <td>{{ encheres.prix }}</td>
        </tr>
        {% endif %}

    {% endfor %}
    </tbody>
    </table>
</div>
{% endblock %}